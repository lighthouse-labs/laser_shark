ol.breadcrumb
  .active
    | Activities

h1 = @parent.text
hr

.actions.well
  .btn.btn-primary.btn-sm.create-outcome_activity-modal-button data-toggle="modal" data-target="#create-outcome_activity-modal"
    | New Activity

table.table
  thead
    tr
      th Content

  tbody
    = render @children

.modal.fade#create-outcome_activity-modal
  .modal-dialog
    .modal-content.create-outcome_activity-modal
      .modal-header
        button.close type='button' data-dismiss='modal'
          span aria-hidden='true'
            | &times;
          span.sr-only
            | Close
        h4.modal-title
          |

      = form_tag admin_category_skill_outcome_activity_path(@parent.outcome.category, @parent.outcome, @parent), method: 'post', id: 'create-outcome_activity-modal-input' do
        .modal-body
          .form-group
            = text_area_tag("activity[text]", nil, placeholder: 'enter new activity', required: true, class: 'form-control')
        .modal-footer
          button.btn.btn-default type='button' data-dismiss='modal'
            | Cancel
          = submit_tag 'New Activity', class: 'btn btn-primary create-outcome_activity-button'