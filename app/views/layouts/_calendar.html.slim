nav.calendar
  - (1..WEEKS).each do |w|
    .week
      ul
        li.previous.week-number
          a href="#"
            | W
            = w
        - (1..5).each do |d|
          li.day-number class=day_status_css("w#{w}d#{d}") = link_to(d, day_path("w#{w}d#{d}"))
        li.day-number class=day_status_css("w#{w}e") = link_to("e", day_path("w#{w}e"))
  - unless today == 'w1d1'
    = link_to 'Yesterday', day_path('yesterday'), class: 'btn-yesterday'
    | &nbsp;
  = link_to 'Today', day_path('today'), class: 'btn-today'

  section.search-box
    = form_tag search_activities_path, method: :get, class: 'search' do
      div.form-group
          - unless @hide_side_search
              = text_field_tag :query, params[:query], class: 'small-search-field', placeholder: 'Search'
              = submit_tag 'Search', class: 'search-btn', :style => "display:none"
