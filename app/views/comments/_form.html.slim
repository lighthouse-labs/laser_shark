= form_for Comment.new, url: activity_comments_path(@activity) do |f|
  - if @comment.errors.any?
    .error_messages
      h2 Please correct the follwing errors.
      ul
        - @comment.errors.full_messages.each do |msg|
          li = msg

  br
  .field
  = f.text_area :content, :cols => 50, :rows => 5
  
  .actions
  = f.submit
