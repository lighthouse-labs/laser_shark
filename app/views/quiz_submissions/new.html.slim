.row
  .col-md-8.col-md-push-2
    article.page-content
      .page-header
        h1.text-center
          i.fa.fa-compass
          = ' Compass Quiz'
      = form_for @quiz_submission do |f|
        = f.hidden_field :quiz_id
        - @quiz_submission.quiz.questions.each_with_index do |question, question_index|
          .submission-question
            h2.text-primary = "Question ##{question_index + 1}"
            p = question.question
            .submission-answer
              h3.text-muted = "Possible Answers"
              .list-group
                - question.options.each_with_index do |option, option_index|
                  .list-group-item
                    .list-group-item-heading
                      = label_tag do
                        = radio_button_tag "quiz_submission[answers_attributes][#{question_index}][option_id]", option.id, @quiz_submission.option_selected?(option)
                        = " Option #{option_index + 1}"
                    .list-group-item-text
                      p = option.answer
        .form-group.text-center
          = f.submit 'Submit', class: 'btn btn-lg btn-primary'
